<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.androidprimarycodedemo.four_components.about_service.ServiceActivity">

    <Button
        android:id="@+id/start_service_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动服务"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/stop_service_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="停止服务"
        android:layout_below="@+id/start_service_button"/>

    <Button
        android:id="@+id/bind_service_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="绑定服务"
        android:layout_below="@+id/stop_service_button"/>

    <Button
        android:id="@+id/unbind_service_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="解绑服务"
        android:layout_below="@+id/bind_service_button"/>

    <Button
        android:id="@+id/bind_remote_service_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="绑定远程服务"
        android:layout_below="@+id/unbind_service_button"/>

    <Button
        android:id="@+id/unbind_remote_service_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="解绑远程服务"
        android:layout_below="@+id/bind_remote_service_button"/>

</RelativeLayout>